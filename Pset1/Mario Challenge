using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Mario_Challenge
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("How high would you like the pyramind to be?");
            int H = int.Parse(Console.ReadLine());
            string hashes = "#";
            string spaces = "";
            int initial = H - 1;
            spaces = spaces.PadLeft(initial); 
            for (int i = 0; i < H; i++)
            {
                Console.WriteLine(spaces + hashes + "  " + hashes);
                hashes += "#";
                if (spaces.Length >= 1)
                {
                    spaces = spaces.Remove(spaces.Length - 1, 1);
                }
            }
            Console.ReadLine();
        }
    }
}
